<div class="card shadow-sm rounded-4 mb-4">
  <div class="card-body text-center">
    <h4 class="card-title fw-bold mb-3">
      <%= link_to user_event_path(event.user, event), class: "text-dark" do %>
        <%= event.title %>
      <% end %>
    </h4>

    <p class="card-text text-muted mb-2">
      <i class="bi bi-calendar-event"></i>
      <%= event.start_time.strftime("%Y年%m月%d日 %H:%M") %>
    </p>

    <p class="card-text text-muted mb-2">
      <i class="bi bi-geo-alt-fill"></i>
      <%= event.location.presence || "場所未定" %>
    </p>

    <p class="card-text mb-3">
      <%= simple_format(event.description) %>
    </p>

    <span class="badge bg-light text-secondary px-3 py-2 rounded-pill border">
      <i class="bi bi-person"></i> 作成者: <%= event.user.name || event.user.email %>
    </span>

    <span class="badge bg-info text-dark px-3 py-2 rounded-pill">
      <i class="bi bi-tag"></i> <%= event.category.name %>
    </span>

    <% if event.user == current_user %>
      <div class="mt-3">
      <%= link_to "編集", edit_user_event_path(current_user, event),
                          class: "btn btn-outline-warning btn-sm me-3" %>
      <%= link_to "削除", user_event_path(current_user, event),
                         data: { turbo_method: :delete, tubro_confirm: "本当に削除しますか？" },
                         class: "btn btn-outline-danger btn-sm" %>
      </div>
    <% end %>
  </div>
</div>
